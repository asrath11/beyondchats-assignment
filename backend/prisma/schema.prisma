generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Article {
  id              String   @id @default(cuid())
  title           String
  link            String   @unique
  originalContent String
  enhancedContent String?
  references      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
